{
  "name": "tsformatter",
  "displayName": "TypeScript Formatter",
  "description": "Formats the current TypeScript document.",
  "version": "0.0.1",
  "publisher": "Nozzlegear",
  "engines": {
    "vscode": "^0.10.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:tsformatter.format"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "tsformatter.format",
        "title": "TypeScript Format"
      }
    ],
    "keybindings": [{
        "command": "tsformatter.format",
        "key": "ctrl+k ctrl+d",
        "when": "editorTextFocus"
    }]
  },
  "scripts": {
    "vscode:prepublish": "node ./node_modules/vscode/bin/compile",
    "compile": "node ./node_modules/vscode/bin/compile -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^1.6.2",
    "vscode": "0.10.x"
  },
  "dependencies": {
    "typescript-formatter": "^1.2.0"
  }
}
